<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <localRepository>${user.home}/.m2/repository</localRepository>
    <interactiveMode>true</interactiveMode>
    
    <profiles>
        <profile>            
            <id>activecq</id>
            
            <properties>
                <cq.scheme>http</cq.scheme>
                <cq.host>localhost</cq.host>
                <cq.port>4502</cq.port>
                <cq.user>admin</cq.user>
                <cq.password>admin</cq.password>
        
                <cq.archiva.scheme>http</cq.archiva.scheme>
                <cq.archiva.host>localhost</cq.archiva.host>
                <cq.archiva.port>4502</cq.archiva.port>
        
                <initial-content.overwrite>true</initial-content.overwrite>
                <initial-content.uninstall>false</initial-content.uninstall> 
            </properties>

        
            <repositories>
                 <!-- Adobe Repository -->
                <repository>
                    <id>abobe.release</id>
                    <name>Adobe Archiva Maven Repository</name>
                    <url>http://repo.adobe.com/archiva/repository/day-central/</url>
                </repository>
        
                <!-- Apache Respository -->
                <repository>
                    <id>apache.releases</id>
                    <name>Apache Release Maven Repository</name>
                    <url>https://repository.apache.org/content/repositories/releases/</url>
                </repository> 

                <!-- Adobe CQ as Maven Plugin Repository 
                    Requires installation of Archiva Servlet CQ Package

                    http://dev.day.com/content/kb/home/cq5/Development/maven/HowToUseCQ5AsMavenRepository.html
                -->
                <repository>
                    <id>local.instance</id>
                    <name>CQ 5.x Archiva Repository</name>
                    <url>${cq.archiva.scheme}://${cq.archiva.host}:${cq.archiva.port}/maven/repository</url>
                </repository>
            </repositories>
      
            <pluginRepositories>
                <pluginRepository>
                    <id>apache.plugin.releases</id>
                    <name>Apache Release Maven Repository</name>
                    <url>https://repository.apache.org/content/repositories/releases/</url>
                </pluginRepository> 

                <pluginRepository>
                    <id>apache.plugin.snapshots</id>
                    <name>Apache Snapshot Maven Repository</name>
                    <url>http://repository.apache.org/snapshots/</url>
                </pluginRepository>            
            </pluginRepositories>        
        
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>activecq</activeProfile>
    </activeProfiles>   
</settings>